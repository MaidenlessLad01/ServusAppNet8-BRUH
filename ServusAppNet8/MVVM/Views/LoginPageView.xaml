<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ServusAppNet8.MVVM.ViewModels"
             xmlns:drawables="clr-namespace:ServusApp.Drawables"
             xmlns:converters="clr-namespace:ServusAppNet8.Converter"
             x:Class="ServusAppNet8.MVVM.Views.LoginPageView"
             NavigationPage.HasNavigationBar="False"
              Shell.NavBarIsVisible="False"
             Title="LoginPageView">

    <!--Binding Context-->
    <ContentPage.BindingContext>
        <local:UserViewModel/>
    </ContentPage.BindingContext>

    <!--The converter to be used-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ShowPasswordConverter x:Key="ShowPasswordConvert" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid>
        <!--Background Gradient-->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                <GradientStop Color="#FFA500" Offset="0"/>
                <GradientStop Color="#F1FC5F" Offset="1"/>
                <GradientStop Color="#FF0000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height=".6*"/>
        </Grid.RowDefinitions>
        <!--Logo-->
        <Image WidthRequest="150" Margin="0,0,0,100" Grid.Row="1" HeightRequest="150" 
            VerticalOptions="Center" HorizontalOptions="Center" Source="logo.png"/>

        <!--Wavey wavey nga panel-->
        <GraphicsView Grid.Row="2" VerticalOptions="End" HeightRequest="1500">
            <GraphicsView.Drawable>
                <drawables:WaveShape />
            </GraphicsView.Drawable>
        </GraphicsView>
        <!--BackButton-->
        <ImageButton x:Name="BackButton" Margin="20,20,0,0" WidthRequest="25" 
                  HeightRequest="25" HorizontalOptions="Start"  Command="{Binding gotoLanding}"  VerticalOptions="Center">
            <ImageButton.Source>
                <FontImageSource FontFamily="icon" Glyph="&#xe800;" Size="30" Color="Gray"/>
            </ImageButton.Source>
        </ImageButton>
        
        <!--Buttons/Entries/Labels for login-->
        <VerticalStackLayout 
                          Grid.Row="2"
                         VerticalOptions="Start"
                         Spacing="20"
                         Margin="20,70,20,0">
            <Border BackgroundColor="#33FFA500" StrokeThickness="0" Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18"/>
                </Border.StrokeShape>
                <Entry Placeholder="Email or Phone Number" 
                       Text="{Binding EmailOrPhone}" FontSize="15" ClearButtonVisibility="WhileEditing" TextColor="Black"/>
            </Border>

            <!--Entry for Password-->
            <Border BackgroundColor="#33FFA500" 
                    StrokeThickness="0" 
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18"/>
                </Border.StrokeShape>
                <Entry Placeholder="Password" 
                       Text="{Binding Password}"
                       IsPassword="{Binding IsPasswordVisible, Converter={StaticResource ShowPasswordConvert}}"
                       ClearButtonVisibility="WhileEditing"
                       FontSize="15" 
                       TextColor="Black"/>
            </Border>

            <!--Checkbox to show password visibility-->
            <HorizontalStackLayout HorizontalOptions="End"
                                   Spacing="5">
                <CheckBox IsChecked="{Binding IsPasswordVisible}"
                          BackgroundColor="OrangeRed"
                          HeightRequest="16"
                          WidthRequest="16"
                          VerticalOptions="Center"/>
                <Label Text="Show Password" 
                       FontSize="12" 
                       VerticalOptions="Center" 
                       TextColor="OrangeRed" 
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="End">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TogglePasswordVisibilityCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>


            <Button x:Name="LoginButton" 
                    Text="Login" 
                    Command="{Binding LoginButton}" 
                    Margin="0,10,0,-10" 
                    TextColor="White"
                    BackgroundColor="OrangeRed" />
            <Label Text="or" HorizontalOptions="Center" TextColor="Gray"/>
            <Button x:Name="SignUpButton" 
                    Text="Sign Up" 
                    Margin="0,-10,0,0" 
                    Command="{Binding gotoReg}" 
                    BorderColor="Black" 
                    TextColor="Black"
                    BorderWidth="1" 
                    BackgroundColor="#00F0F8FF"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>